from django.db import models

# Create your models here.



class HeaderModel(models.Model):
    title = models.CharField(max_length=20)

class News(models.Model):
    short_image = models.ImageField(upload_to="news/", null=True, blank=True)
    short_title = models.CharField(max_length=50, null=True, blank=True)
    short_text = models.CharField(max_length=100, null=True, blank=True)
    full_image = models.ImageField(upload_to="news/", null=True, blank=True)
    url = models.TextField(null=True, blank=True)
    full_title = models.CharField(max_length=100, null=True, blank=True)
    full_text = models.TextField( null=True, blank=True)
    publish_date = models.DateTimeField(auto_now_add=True)

    def __str__(self):
        return f"{self.short_title}"

